<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema" elementFormDefault="qualified">
  <!-- Eve types -->
  <xs:simpleType name="eveBoolean">
    <xs:restriction base="xs:string">
      <xs:enumeration value="True"/>
      <xs:enumeration value="False"/>
      <xs:enumeration value="true"/>
      <xs:enumeration value="false"/>
      <xs:enumeration value="TRUE"/>
      <xs:enumeration value="FALSE"/>
      <xs:enumeration value="1"/>
      <xs:enumeration value="0"/>
    </xs:restriction>
  </xs:simpleType>
  <xs:simpleType name="eveColumns">
    <xs:restriction base="xs:normalizedString">
      <xs:pattern value="[a-zA-Z]\w*"/>
      <xs:pattern value="[a-zA-Z]\w*(,\s?[a-zA-Z]\w*)*,\s?[a-zA-Z]\w*"/>
    </xs:restriction>
  </xs:simpleType>
  <xs:simpleType name="eveDT">
    <xs:annotation>
      <xs:documentation>Date/time that can be empty.</xs:documentation>
    </xs:annotation>
    <xs:restriction base="xs:string">
      <xs:pattern value=""/>
      <xs:pattern value="(\d{4})-((0[13578])|10|12)-((0[1-9])|([1-2]\d)|30|31)(T|\s)(([01]\d)|(2[0-3])):([0-5]\d):([0-5]\d)"/>
      <xs:pattern value="(\d{4})-((0[469])|11)-((0[1-9])|([1-2]\d)|30)(T|\s)(([01]\d)|(2[0-3])):([0-5]\d):([0-5]\d)"/>
      <xs:pattern value="(\d{4})-02-((0[1-9])|([1-2]\d))(T|\s)(([01]\d)|(2[0-3])):([0-5]\d):([0-5]\d)"/>
    </xs:restriction>
  </xs:simpleType>
  <xs:simpleType name="eveID">
    <xs:restriction base="xs:long">
      <xs:minInclusive value="0" fixed="true"/>
    </xs:restriction>
  </xs:simpleType>
  <xs:simpleType name="eveIDNegative">
    <xs:restriction base="xs:long">
      <xs:minInclusive value="-1" fixed="true"/>
    </xs:restriction>
  </xs:simpleType>
  <xs:simpleType name="eveISK">
    <xs:restriction base="xs:decimal">
      <xs:totalDigits value="17" fixed="true"/>
      <xs:fractionDigits value="2" fixed="true"/>
    </xs:restriction>
  </xs:simpleType>
  <xs:simpleType name="eveNEDT">
    <xs:annotation>
      <xs:documentation>Date/time that can NOT be empty.</xs:documentation>
    </xs:annotation>
    <xs:restriction base="xs:string">
      <xs:pattern value="(\d{4})-((0[13578])|10|12)-((0[1-9])|([1-2]\d)|30|31)(T|\s)(([01]\d)|(2[0-3])):([0-5]\d):([0-5]\d)"/>
      <xs:pattern value="(\d{4})-((0[469])|11)-((0[1-9])|([1-2]\d)|30)(T|\s)(([01]\d)|(2[0-3])):([0-5]\d):([0-5]\d)"/>
      <xs:pattern value="(\d{4})-02-((0[1-9])|([1-2]\d))(T|\s)(([01]\d)|(2[0-3])):([0-5]\d):([0-5]\d)"/>
    </xs:restriction>
  </xs:simpleType>
  <!-- Eve Attributes -->
  <xs:attributeGroup name="rowsetAttrs">
    <xs:attribute name="columns" use="required" type="eveColumns"/>
    <xs:attribute name="key" use="required" type="xs:NCName"/>
    <xs:attribute name="name" use="required" type="xs:NCName"/>
  </xs:attributeGroup>
</xs:schema>
